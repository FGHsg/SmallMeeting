.bc_gray{
    background-color: #c2bdbd;
}
.flex-wrp{
    align-content: center;
    height: 100px;
    display:flex;
    background-color: #FFFFFF;
}
.flex-item{
    margin-left: 10px;
    margin-right: 10px;
    width: 120px;
    height: 100px;
}
.flex-item1{
    margin-left: 20px;
    margin-right: 20px;
    width: 200px;
    height: 100px;
}
.text{
  color: white;
  text-align: center;
  font-family: "Helvetica Neue",Arial,"PingFang SC",
  "Microsoft YaHei",sans-serif;
}
.section{
    padding-top: 10px;
    margin-bottom: 40px;
}

.widgets__item{
    margin-top: 0px;
    margin-bottom: 10px;
    background-color: #38394b;
    overflow: hidden;
    border-radius: 0px;
    cursor: pointer;
}
.widgets__info{
    display: flex;
    padding: 5px;
    align-items: center;
    flex-direction: row;
}
.widgets__info_show{
    opacity: .4;
}
.title{
  flex: 1;
  color: white;
  text-align: left;
  font-size: 15px;
  font-family: "Helvetica Neue",Arial,"PingFang SC",
  "Microsoft YaHei",sans-serif;
}
.widgets__info-img{
    margin-left:3px;
    margin-right:3px; 
    width: 20px;
    height: 20px;
}
.flex-image{
    width: 80px;
    height: 60px;
    margin-top: 8px;
    margin-left:20px;   
}
